@model MyApp.Models.ViewModel.CategoryVM;
@{
    ViewData["Title"] = "Create/Edit";
}
<form method="post">
    <div class="border mt-4 p-3">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Category==null || Model.Category.Id==0)?"Create":"Update") Category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Category.Id" />
        <div class="row mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">@((Model.Category == null || Model.Category.Id == 0) ? "Create" : "Update")</button>
        <div asp-validation-summary="All"></div>
    </div>
    <a asp-action="Index" asp-controller="Category">Back To List</a>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
