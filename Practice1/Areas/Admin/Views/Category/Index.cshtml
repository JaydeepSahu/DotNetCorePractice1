@model MyApp.Models.ViewModel.CategoryVM
@{
    ViewData["Title"] = "Index";
    
}

<h1>List Of Categories</h1>
<br />
<a type="button" class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="CreateUpdate">Create Category</a>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Sr. No.</th>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var item in Model.categories)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id" >Edit</a>
                        <a asp-area="Admin" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
